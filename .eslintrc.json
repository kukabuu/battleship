{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
			"no-tabs": ["error", { "allowIndentationTabs": true }],
			"indent": ["error", "tab"],
			"quote-props": ["error", "consistent"],
			"no-console": "off",
			"no-plusplus": "off",
			"no-restricted-syntax": "off"
    }
}